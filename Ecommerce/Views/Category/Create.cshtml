@model Category

<form method="post" class="">
    <div class="container p-3  mt-4 border border-danger rounded-3 ">
        <div class="row pb-2">
            <h1 class="text-primary">
                Create Category
            </h1>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>
            <div class="">
                <label asp-for="CreatedDateTime"></label>
                <input asp-for="CreatedDateTime" class="form-control" />
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
            </div>

        </div>
        <div class="row">
            

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"> Create</button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"> Back To List</a>

    </div>

</form>

