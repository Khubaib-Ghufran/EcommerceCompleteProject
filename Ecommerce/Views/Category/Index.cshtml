@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1> Category Index</h1>

<table class="table table-dark table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Date Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.id
                    </td>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
    </tbody>

</table>