@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>

    </div>
    <table class="table table-dark table-striped text-center border-danger"  style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Date Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.id
                    </td>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%" class="">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>